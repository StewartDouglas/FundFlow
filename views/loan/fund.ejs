<div class='container'>
	<div style="background-color: #eeeeee; border-radius: 20px; padding: 15px">
		<h1 style="padding: 0px; margin-top: 10px"> Funding Opportunities </h1>
			<table class="table table-striped">
			<tr>
				<th>Description</th>
				<th>Amount</th>
				<th>APR</th>
				<th>Funding Expires</th>
				<th>Payments Begin</th>
				<th></th>
			</tr>
			<tr>
			   <td><a href="/loan/showOne/<%= loan.id %>"><%= loan.description %></a></td>
			   <td><%= loan.amount %> BTC</td>
			   <td><%= loan.interest.toFixed(1) %> %</td>
			   <td><%= loan.expires.getDate() %> <%= months[(loan.expires.getMonth())] %> <%= loan.expires.getFullYear() %> </td>
			   <td><%= loan.expires.getDate() %> <%= months[(loan.expires.getMonth() + 1) % 12] %> <% if(loan.expires.getMonth() == 12) { %>
			   	<%= loan.expires.getFullyYear() + 1 %> 
			   	<% } %>
			   	<% if(loan.expires.getMonth() != 12) { %>
			   	<%= loan.expires.getFullYear() %>
			   	<% } %>			   	
			   <td>

			      <form action="/loan/giveFunds/<%= loan.id %>" method="POST" id="giveFunds">
								<input type="number" class="form-control"  placeholder="0.0" name="fund"/>
								<input type="submit" value="Fund" class="btn btn-lg btn-primary btn-block"/>
								<input type="hidden" name="_csrf" value="<%= _csrf %>" />
				  </form>			   
			   </td>
			</tr>
		</table>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Are you sure?</h4>
      </div>
      <div class="modal-body">

      Are you sure you want to provide these funds? <br/>
      If you click Confirm your account will be debited <span id="amount"> </span> BTC

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="cancel">Cancel</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="confirm">Confirm</button>
      </div>
    </div>
  </div>
</div>



